<h2>Recent News</h2>
<div id="user_nav">  
  <% if current_user %>  
    <%= link_to "Edit profile", edit_user_path(current_user) %>  
    <%= link_to "Logout", logout_path %>  
  <% else %>  
    <%= link_to "Register", new_user_path %>  
    <%= link_to "Log in", login_path %>  
  <% end %>  
</div>
<% @posts.each do |post| %>
<div class="news_post">
  <h3>
		<%=h post.title %>
	</h3>
	<h5>
		<%= l post.created_at, :format => :post %>
	</h5>
	<p>
		<% if post.excerpt.blank? %>
		<%= truncate(strip_tags(post.body), :length => 1000) %>
		<% else %>
		<%=strip_tags post.excerpt %>
		<% end %>
	</p>
	<p><%= link_to "Read More", post %></p>
</div>
<% end %>