<h1>Listing assets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
		<td><%= image_tag asset.file.url(:thumb) %>
    <td><%=h asset.name %></td>
    <td><%=h asset.description %></td>
    <td><%= link_to 'Show', admin_asset_path(asset) %></td>
    <td><%= link_to 'Edit', edit_admin_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', admin_asset_path(asset), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New asset', new_admin_asset_path %>